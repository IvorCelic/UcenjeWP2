@model List<Category>

@section title {
    <h3>Kategorije</h3>
}

@if (Model != null && Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Naziv</th>
                <th>Opis</th>
                <th>Akcija</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>@category.Description</td>
                    <td>
                        <a class="btn btn-link" asp-controller="categories" asp-action="edit" asp-route-ID="@category.CategoryID">Promjena</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
